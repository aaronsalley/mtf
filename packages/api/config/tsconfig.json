{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,

    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,

    "experimentalDecorators": true,
  },
  "include": [
    "./packages/**/*"
  ],
  "exclude": [
      "**/node_modules",
      "**/*.spec.ts"
  ]
}
