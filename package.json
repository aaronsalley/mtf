{
  "name": "mtfmusicals",
  "version": "0.1.0",
  "author": {
    "name": "Aaron Salley LLC",
    "email": "info@aaronsalley.com"
  },
  "homepage": "https://mtf.nyc/",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/optack/core"
  ],
  "scripts": {
    "postinstall": "husky install",
    "dev": "docker compose up",
    "start": "docker compose -f compose.yaml -f compose.prod.yaml up -d",
    "validate": "yarn dlx lint-staged"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "eslint": "8.22.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0"
  },
  "lint-staged": {
    "**/*.(j|t)s?(x)": [
      "yarn prettier --write --ignore-unknown",
      "yarn eslint --fix"
    ],
    "**/*.?(s)css": "yarn stylelint --fix"
  }
}
